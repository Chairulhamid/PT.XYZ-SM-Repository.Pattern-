@{
    ViewBag.Title = "Create Work Location";
    ViewBag.MenuName = "Work Location";
    ViewBag.MenuPage = "Form Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminOSCE.cshtml";
}
@section css{
    @Scripts.Render("~/bundles/jquery")
}
@model OSCEUKDI.Entities.Models.OSCEUKDI.WorkLocation
<div class="col-12">
    <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-faded-secondary-vertical shadow-dark border-radius-lg pt-4 pb-3">
                <h5 class="text-light  ps-3 text-uppercase  text-center"><b>Update Work Location</b></h5>
            </div>
        </div>
        <div class="container">
            <div class="card-header py-1">
            </div><hr style="border:outset" />
            <div class="alert alert-danger alert-dismissible d-none text-white" id="danger-alert" role="alert">
                <i class="material-icons text-white ">
                    warning
                </i>
                <span id="alertText" class=""></span>
            </div>
            <div class="p-4">
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-static mb-4">
                                <h6 for="Code">Code <b class="text-danger">*</b> </h6>
                                <input type="hidden" id="ID" value="@Model.ID" />

                                <input type="text" disabled class="form-control input-data disabled" name="Code" id="Code" placeholder="Input Code" value="@Model.Code">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-static mb-4">
                                <h6 for="Area">Area <b class="text-danger">*</b> </h6>
                                <input type="text" class="form-control input-data" name="Area" id="Area" placeholder="Input Area" value="@Model.Area">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="input-group input-group-static mb-4">
                                <h6 for="Address">Address </h6>
                                <textarea class="form-control" name="Address" id="Address" rows="1" placeholder="Input Address" spellcheck="false">@Model.Address</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-sm-6 col-md-offset-10">
                            <button type="button" class="btn btn-success" onclick="PostUpdate()">
                                <i class="material-icons opacity-10">update</i>
                                Update
                            </button>
                            <button type="button" class="btn btn-danger" onclick="history.back()">
                                <i class="material-icons opacity-10">arrow_back</i>
                                Back
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Admin/WorkLocation/main.js"></script>
    <script src="~/Scripts/Admin/WorkLocation/crud.js"></script>
}

