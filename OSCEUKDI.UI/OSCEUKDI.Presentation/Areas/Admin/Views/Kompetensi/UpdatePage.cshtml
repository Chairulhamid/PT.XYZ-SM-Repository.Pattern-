

@{
    ViewBag.Title = "Update Kompetensi";
    ViewBag.MenuName = "Ruang Ujian";
    ViewBag.MenuPage = "Form Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminOSCE.cshtml";
}
@section css{
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
}
@model OSCEUKDI.Entities.Models.OSCEUKDI.Kompetensi

<div class="">
    <div class="title_left">
        <a href="javascript:history.back()" class="btn btn-circle text-secondary"><i class="fa fa-arrow-left"></i></a>
        <span class="text-secondary h3"><strong>Update </strong></span><em><strong class="text-info">Data</strong></em>
    </div>
    <div class="clearfix"></div>
    <div class="alert alert-warning d-none  alert-dismissible  text-white" id="danger-alert" role="alert">
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
        <span id="alertText" class=""></span>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Kompetensi</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form class="">
                        <h4 class="col-form-label">Nama Kompetensi<span class="required text-danger"> * </span></h4>
                        <input type="hidden" id="ID" value="@Model.ID" />
                        <input class="form-control input-data" name="NamaKompetensi" id="NamaKompetensi" placeholder="Nama Kompetensi" value="@Model.NamaKompetensi" />
                        <h4 class="col-form-label">Kategori<span class="required text-danger"> * </span></h4>
                        <select name="KategoriOsce" id="KategoriOsce" class="form-control input-data">
                            <option value="" selected disabled>Pilih Kategori</option>
                            @{
                                if (@Model.KategoriOsce != null)
                                {
                                    foreach (var dt in ViewData["KategoriOsce"] as IEnumerable<OSCEUKDI.Entities.ViewModel.VMDropDown>)
                                    {
                                        <option value="@dt.Nama" @{ if (@Model.KategoriOsce.ToString() == dt.Nama.ToString()) { <text> selected</text> } }>
                                            @dt.Nama
                                        </option>
                                    }
                                }
                                else
                                {
                                    foreach (var dt in ViewData["KategoriOsce"] as IEnumerable<OSCEUKDI.Entities.ViewModel.VMDropDown>)
                                    {
                                        <option value="@dt.Nilai">@dt.Nama</option>
                                    }
                                }

                            }
                        </select>
                        <div class="ln_solid ">
                            <div class="form-group mt-3">
                                <div class="col-md-12 text-center">
                                    <button type='button' class="btn btn-round btn-success" onclick="PostUpdate()">
                                        <i class="fa fa-save" aria-hidden="true"></i> Save
                                    </button>
                                    <button type='button' class="btn btn-round btn-secondary" onclick="history.back()">
                                        <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i> Back
                                    </button>
                                    <button type='reset' class="btn btn-round btn-danger">
                                        <i class="fa fa-refresh" aria-hidden="true"></i> Reset
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Admin/Kompetensi/crud.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#KategoriOsce").select2({
                placeholder: "-- Pilih Acad Career --",
                width: "100%"
            });
        })
    </script>
}