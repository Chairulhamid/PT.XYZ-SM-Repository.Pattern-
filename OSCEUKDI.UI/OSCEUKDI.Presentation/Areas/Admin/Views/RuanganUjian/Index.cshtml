    <link href="http://kp.bkd.sidoarjokab.go.id/website/lib/DataTables-1.10.7/extensions/TableTools/css/dataTables.tableTools.css" rel="stylesheet" />*@
    <style>
        table.dataTable tbody tr.selected {
            background-color: #B0BED9;
        }
    </style>
    @Scripts.Render("~/bundles/jquery")
}
<form action="@Url.Action("UpdatePage","RuanganUjian")" method="post" id="updateRuanganUjian">
    <input type="hidden" id="id" name="id" />
</form>
<input type="hidden" id="isCreate" value="@ViewData["isCreate"].ToString()" />
<input type="hidden" id="isUpdate" value="@ViewData["isUpdate"].ToString()" />
<input type="hidden" id="isDelete" value="@ViewData["isDelete"].ToString()" />

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Manage Ruangan Ujian</h3>
        </div>
    </div>
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>List Ruangan Ujian</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>

            <button type="button" class="btn btn-round btn-info" onclick="CreateData()"> <i class="fa fa-plus-circle" aria-hidden="true"></i> Add Data</button>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <p class="text-muted font-13 m-b-30">
                            </p>
                            <table id="datatable-responsive" class="table table-striped bg-gray table-bordered dt-responsive nowrap table-ruanganUjian" cellspacing="0" width="100%">
                                <thead>
                                    <tr class="bg-green text-center">
                                        <th width="10%"><i class="fa fa-gear" aria-hidden="true" style="font-size:20px"></i></th>
                                        <th width="5%">No</th>
                                        <th>Nama Ruangan</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Admin/RuangUjian/main.js"></script>
    <script src="~/Scripts/Admin/RuangUjian/crud.js"></script>
    <script>
        $('.table-ruanganUjian tbody').on('click', 'tr', function () {

            $(this).toggleClass('selected');
        });
        var theArray = [];
        $('#button').click(function () {

            theArray = [];
            var ids = $.map(tableRuanganUjian.rows('.selected').data(), function (item) {
                theArray.push(item);
            });
        })
    </script>
}


