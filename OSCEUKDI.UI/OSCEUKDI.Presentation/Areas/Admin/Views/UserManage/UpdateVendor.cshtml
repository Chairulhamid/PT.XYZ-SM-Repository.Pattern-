
@{
    ViewBag.Title = "Update Vendor";
    ViewBag.MenuName = "Ruang Ujian";
    ViewBag.MenuPage = "Form Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminOSCE.cshtml";
}
@section css{
    @Scripts.Render("~/bundles/jquery")
}
@model OSCEUKDI.Entities.Models.User

<div class="">
    <div class="title_left">
        <a href="javascript:history.back()" class="btn btn-circle text-secondary"><i class="fa fa-arrow-left"></i></a>
        <span class="text-secondary h3"><strong>Update </strong></span><em><strong class="text-info">Data</strong></em>
    </div>
    <div class="clearfix"></div>
    <div class="alert alert-warning d-none  alert-dismissible  text-white" id="danger-alert" role="alert">
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
        <span id="alertText" class=""></span>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Vendor</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form class="" action="" method="post" novalidate>
                        <h4 class="col-form-label">Nama perusahaan </h4>
                        <input type="hidden" id="ID" value="@Model.ID" />
                        <input class="form-control " name="NamaPerusahaan" id="NamaPerusahaan" value="@Model.UserName" />

                        <h4 class="col-form-label">Email</h4>
                        <input class="form-control " name="Email" id="Email" value="@Model.Email" disabled />

                        <h4 class="col-form-label">Password</h4>
                        <input type="password" class="form-control " name="Password" id="Password" value="@Model.Password" disabled />

                        <h4 class="col-form-label">Phone</h4>
                        <input class="form-control " name="Phone" id="Phone" value="@Model.Phone" />

                        <h4 class="col-form-label">Bidang Usaha</h4>
                        <input class="form-control " name="BidangUsaha" id="BidangUsaha" value="@Model.BidangUsaha" />

                        <h4 class="col-form-label">Jenis Perusahaan</h4>
                        <input class="form-control " name="JenisPerusahaan" id="JenisPerusahaan" value="@Model.JenisPerusahaan" />

                        <h4 class="col-form-label">Status</h4>
                        @{
                            string selectedStatus = Model.StatusApproval;
                        }
                        @if (Session["RoleID"].ToString() == "2")
                        {
                            <select class="form-control" id="StatusApproval" aria-label="Default select example">
                                <option value="" @(selectedStatus == "" ? "selected" : "")>Pilih</option>
                                <option value="Pending" @(selectedStatus == "Pending" ? "selected" : "")>Pending</option>
                                <option value="Pending-1" @(selectedStatus == "Pending-1" ? "selected" : "")>Approve</option>
                                <option value="Reject" @(selectedStatus == "Reject" ? "selected" : "")>Reject</option>
                            </select>
                        }
                        else
                        {
                            <select class="form-control" id="StatusApproval" aria-label="Default select example">
                                <option value="" @(selectedStatus == "" ? "selected" : "")>Pilih</option>
                                <option value="Pending-1" @(selectedStatus == "Pending-1" ? "selected" : "")>Pending</option>
                                <option value="Approve" @(selectedStatus == "Approve" ? "selected" : "")>Approve</option>
                                <option value="Reject" @(selectedStatus == "Reject" ? "selected" : "")>Reject</option>
                            </select>
                        }
                        <h4 class="col-form-label">Photo</h4>
                        <div style="text-align: center;">
                            <img src="data:image/png;base64,@Model.Photo" alt="Gambar" style="max-width:300px; max-height:300px; display: block; margin: 0 auto;">
                            <input type="hidden" id="uPhoto-strImgBs64" />
                        </div>


                        <div class="ln_solid ">
                            <div class="form-group mt-3">
                                <div class="col-md-12 text-center">
                                    <button type='button' class="btn btn-round btn-success" onclick="PostUpdate()">
                                        <i class="fa fa-save" aria-hidden="true"></i> Save
                                    </button>
                                    <button type='button' class="btn btn-round btn-secondary" onclick="history.back()">
                                        <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i> Back
                                    </button>
                                    <button type='reset' class="btn btn-round btn-danger">
                                        <i class="fa fa-refresh" aria-hidden="true"></i> Reset
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        var data = {}
        //2.Validasi
        function getValueOnForm() {
            data.UserName = $('#NamaPerusahaan').val();
            data.Email = $('#Email').val();
            data.Password = $('#Password').val();
            data.Phone = $('#Phone').val();
            data.BidangUsaha = $('#BidangUsaha').val();
            data.JenisPerusahaan = $('#JenisPerusahaan').val();
            data.StatusApproval = $('#StatusApproval').val();
        }
        function PostUpdate() {
            UpdateDataAjax($('#ID').val(), data, "/Admin/UserManage/UpdateDataVendor", "/Admin/UserManage/Vendor");
        }
        function clearValueOnForm() {
            $("#NamaPerusahaan").val('');
            $("#Email").val('');
            $("#Password").val('');
            $("#Phone").val('');
            $("#BidangUsaha").val('');
            $("#JenisPerusahaan").val('');
            $("#StatusApproval").val('');
        }
    </script>
}