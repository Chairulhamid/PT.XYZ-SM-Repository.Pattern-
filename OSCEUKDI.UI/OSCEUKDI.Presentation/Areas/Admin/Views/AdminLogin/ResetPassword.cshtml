                                <h6 for="Role">Role <b class="text-danger">*</b> </h6>
                                <select class="form-control pb-4" name="RoleID" id="RoleID">
                                    <option value="@Model.RoleID" selected>@Model.Roles.RoleName</option>
                                    @{
                                        foreach (var data in ViewData["Role"] as IEnumerable<OSCEUKDI.Entities.ViewModel.VMDropDown>)
                                        {
                                            <option value="@data.Nilai">@data.Nama</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

