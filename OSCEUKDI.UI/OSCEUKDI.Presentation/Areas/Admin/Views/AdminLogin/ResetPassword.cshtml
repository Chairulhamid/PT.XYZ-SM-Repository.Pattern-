                <i class="material-icons text-white ">
                    warning
                </i>
                <span id="alertText" class="" style="font-size:20px"></span>
            </div>
            <div class="p-4">
                <form>

                    <div class="row">
                        <div class="col-md-6">
                            <input type="hidden" id="id_User" value="@Model.ID" />
                            <div class="input-group input-group-static mb-4">
                                <h6 for="UserName">USERNAME <b class="text-danger">*</b> </h6>
                                <input type="text" class="form-control input-data" name="UserName" id="UserName" placeholder="Input Username" value="@Model.NoPegawai" required disabled>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-static mb-4">
                                <h6 for="NoPegawai">NO PEGAWAI <b class="text-danger">*</b></h6>
                                <input type="text" class="form-control input-data" name="NoPegawai" id="NoPegawai" placeholder="Input No Pegawai" value="@Model.UserName" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-static mb-4">
                                <h6 for="Email">EMAIL <b class="text-danger">*</b> </h6>
                                <input type="email" class="form-control input-data" name="Email" id="Email" placeholder="Input Email" value="@Model.Email" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-static mb-4">
                                <h6 for="Password">PASSWORD <b>*</b></h6>
                                <input type="password" class="form-control input-data" name="Password" id="Password" placeholder="Input Password"  required se>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
