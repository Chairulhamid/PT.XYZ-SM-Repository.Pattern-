

@{
    ViewBag.Title = "Role";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminOSCE.cshtml";
}
@section css{
    @Scripts.Render("~/bundles/jquery")
}

<div class="">
    <div class="title_left">
        <a href="javascript:history.back()" class="btn btn-circle text-secondary"><i class="fa fa-arrow-left"></i></a>
        <span class="text-secondary h3"><strong>Tambah </strong></span><em><strong class="text-info">Data</strong></em>
    </div>
    <div class="clearfix"></div>
    <div class="alert alert-warning d-none  alert-dismissible  text-white" id="danger-alert" role="alert">
        <i class="fa fa-exclamation-triangle" style="font-size:20px" aria-hidden="true"></i>
        <span id="alertText" class="" style="font-size:20px"></span>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Role</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form class="" action="" method="post" novalidate>
                        <div class=" field item form-group">
                            <h4 class="col-form-label col-md-3 col-sm-3  label-align">Code<span class="required text-danger"> * </span></h4>
                            <div class="col-md-6 col-sm-6">
                                <input class="form-control input-data" name="Code" id="Code" placeholder="Input Code" required="required" />
                            </div>
                        </div>
                        <div class="field item form-group">
                            <h4 class="col-form-label  col-md-3 col-sm-3 label-align">Role Name<span class="required text-danger"> * </span></h4>
                            <div class="col-md-6 col-sm-6">
                                <input class="form-control input-data" name="RoleName" id="RoleName" placeholder="Input Role Name" required="required" />
                            </div>
                        </div>
                        <div class="ln_solid ">
                            <div class="form-group mt-3">
                                <div class="col-md-12 text-center">
                                    <button type='button' class="btn btn-round btn-success" onclick="PostCreate()">
                                        <i class="fa fa-save" aria-hidden="true"></i> Save
                                    </button>
                                    <button type='button' class="btn btn-round btn-secondary" onclick="history.back()">
                                        <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i> Back
                                    </button>
                                    <button type='reset' class="btn btn-round btn-danger">
                                        <i class="fa fa-refresh" aria-hidden="true"></i> Reset
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/Admin/Role/crud.js"></script>
}