                                    <h4 class="col-form-label  label-align">Deskripsi Nilai 0 <span class="required text-danger"> * </span></h4>
                                </div>
                                <div class="col-md-10 col-sm-10">
                                    <textarea class="form-control inputText0 " id="Nilai0" name="Nilai0" rows="2">@item.Nilai0</textarea>
                                </div>
                            </div>

                            <div class="@{if (item.Nilai1 != null){ <text>field item form-group  textarea1</text> } else { <text>field item form-group d-none textarea1</text>} }">
